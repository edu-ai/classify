apiVersion: apps/v1
kind: Deployment
metadata:
  name: blur-worker
  namespace: classify
spec:
  replicas: 4
  selector:
    matchLabels:
      app: blur-worker
  template:
    metadata:
      labels:
        app: blur-worker
    spec:
      containers:
      - name: blur-worker
        image: REPLACE_WITH_ECR_REGISTRY/classify-blur-worker:latest
        command: ["python", "worker.py"]
        envFrom:
        - configMapRef:
            name: classify-config
        - secretRef:
            name: classify-secrets
